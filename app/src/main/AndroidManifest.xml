<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="petstone.project.animalisland">


    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@mipmap/icon_animal_island"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_animal_island_round"
        android:usesCleartextTraffic="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>

         </activity>
        <activity android:name="petstone.project.animalisland.activity.MainActivity" />
        <activity android:name="petstone.project.animalisland.activity.MypageInfoEditActivity" />
        <activity android:name="petstone.project.animalisland.activity.MypagePetfriendApplyActivity" android:windowSoftInputMode="adjustPan" />
        <activity android:name="petstone.project.animalisland.activity.MypageSellApplyActivity" />
        <activity android:name="petstone.project.animalisland.activity.PetfriendUserSelect" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name="petstone.project.animalisland.activity.RehomeFreeSubmitActivity" />
        <activity android:name="petstone.project.animalisland.activity.RehomeSellSubmitActivity" />
        <activity android:name="petstone.project.animalisland.activity.SelectFreeRehomeActivity" android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name="petstone.project.animalisland.activity.SelectSellRehomeActivity" />
        <activity android:name="petstone.project.animalisland.activity.ChatActivity" />
        <activity android:name=".activity.WebviewActivity"/>
        <activity android:name=".activity.ScheduleActivity"/>

    </application>

</manifest>